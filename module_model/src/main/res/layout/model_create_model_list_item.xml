<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.dyzn.genesis.lib_common.widget.SwipeItemLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_60">

        <RelativeLayout
            android:paddingHorizontal="@dimen/widget_size_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.dyzn.genesis.lib_common.widget.AppImageView
                android:id="@+id/iv_model_thumb"
                android:layout_width="@dimen/widget_size_40"
                android:layout_height="@dimen/widget_size_40"
                android:layout_centerVertical="true"
                android:background="@color/color_main_red" />

            <com.dyzn.genesis.lib_common.widget.AppTextView
                android:id="@+id/tv_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="@dimen/font_size_15"
                android:layout_toEndOf="@+id/iv_model_thumb"
                android:layout_marginStart="@dimen/widget_size_15"
                android:layout_marginTop="@dimen/widget_size_10"
                tools:text="模型名字"
                tools:ignore="RelativeOverlap" />

            <com.dyzn.genesis.lib_common.widget.AppTextView
                android:id="@+id/tv_model_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999"
                android:layout_marginStart="@dimen/widget_size_15"
                android:layout_toEndOf="@+id/iv_model_thumb"
                android:layout_marginTop="@dimen/widget_size_5"
                android:layout_below="@+id/tv_model_name"
                android:textSize="@dimen/font_size_12"
                tools:text="2021-05-09 14:45" />

            <com.dyzn.genesis.lib_common.widget.AppImageView
                android:id="@+id/iv_model_state"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/widget_size_27"
                android:layout_height="@dimen/widget_size_27" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/widget_size_75"
            android:layout_height="@dimen/widget_size_60"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="@dimen/widget_size_75"
                android:layout_height="@dimen/widget_size_60"
                android:background="@color/color_main_red"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />
        </LinearLayout>
    </com.dyzn.genesis.lib_common.widget.SwipeItemLayout>
</layout>
